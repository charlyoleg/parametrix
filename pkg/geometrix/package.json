{
	"name": "geometrix",
	"version": "1.0.1",
	"description": "The 2D geometry engine of the parametrix",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/charlyoleg/parametrix.git"
	},
	"homepage": "https://github.com/charlyoleg/parametrix#readme",
	"keywords": [
		"cad",
		"programmatic",
		"2D",
		"circle",
		"stroke",
		"arc",
		"gear"
	],
	"author": "charlyoleg",
	"tsup": {
		"entry": ["src/index.ts"],
		"format": "esm",
		"splitting": false,
		"dts": true,
		"sourcemap": true,
		"clean": true
	},
	"scripts": {
		"build": "tsup",
		"test:unit": "vitest",
		"test:unit:once": "vitest --run",
		"ci": "run-s build test:unit:once",
		"svgo": "svgo -f svg -o ../parametrix/static",
		"clean": "shx rm -fr dist node_modules"
	},
	"dependencies": {
		"@zip.js/zip.js": "^2.7.17"
	},
	"devDependencies": {
		"npm-run-all": "^4.1.5",
		"shx": "^0.3.4",
		"svgo": "^3.0.2",
		"tsup": "^7.1.0",
		"typescript": "^5.1.3",
		"vitest": "^0.32.2"
	},
	"exports": {
		".": "dist/index.js"
	},
	"types": "dist/index.d.ts",
	"type": "module"
}
