{
	"name": "parametrix",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"test:unit:once": "vitest --run",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"ci": "run-s build lint check test:unit:once",
		"format": "prettier --plugin-search-dir . --write .",
		"svgo1": "svgo -f src/lib/svg -o static",
		"svgo2": "svgo -f src/lib/design/svg -o static",
		"svgo3": "svgo -f src/lib/geom/svg -o static",
		"svgo4": "svgo -f src/routes/docs/svg -o static",
		"svgo": "run-s svgo1 svgo2 svgo3 svgo4",
		"github-pages-fix": "touch build/.nojekyll",
		"clean": "shx rm -fr .svelte-kit build"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/adapter-static": "^2.0.2",
		"@sveltejs/kit": "^1.20.2",
		"@typescript-eslint/eslint-plugin": "^5.59.9",
		"@typescript-eslint/parser": "^5.59.9",
		"eslint": "^8.42.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"mdsvex": "^0.10.6",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"sass": "^1.63.2",
		"shx": "^0.3.4",
		"svelte": "^3.59.1",
		"svelte-check": "^3.4.3",
		"svgo": "^3.0.2",
		"tslib": "^2.5.3",
		"typescript": "^5.1.3",
		"vite": "^4.3.9",
		"vitest": "^0.32.0"
	},
	"type": "module"
}
